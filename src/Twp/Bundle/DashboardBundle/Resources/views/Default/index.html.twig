{% extends 'TwpDashboardBundle::layout.html.twig' %}

{% block content %}
<section>
    <h1>TWP Community</h1>
    <ul>
        <li><a id="new-idea" class="new-button" href="#"></a></li>
        <li><a id="new-issue" class="new-button" href="#"></a></li>
    </ul>
    <form action="{{ path('homepage') }}" method="post" {{ form_enctype(form) }}>
        <h2>I suggest you...</h2>
        {{ form_widget(form) }}
        <input type="Submit" value="Add"/>
    </form>
    <form id="new-issue-form">
        <h2>You need to fix...</h2>
        <div>
            <span>Enter your issue...</span>
            <input name="issue[title]" type="text" value="">
        </div>
        <div>
            <span>Describe your issue...</span>
            <textarea name="issue[content]"></textarea>
        </div>
        <input type="Submit" value="Add"/>
    </form>
</section>
<section>
    {% include 'TwpIdeaBundle:Idea:list.html.twig' with { 'ideas': topIdeas } %}
</section>
{% endblock %}
